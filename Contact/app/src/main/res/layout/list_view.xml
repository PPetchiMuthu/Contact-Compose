<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    card_view:cardBackgroundColor="#EBFFF4"
    card_view:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            card_view:srcCompat="@drawable/images"
            app:civ_border_color="#28B13F"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="257dp"
            android:layout_height="61dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#0E0E0E"
            android:textColorHint="#020202"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#EBFFF4"
            android:contentDescription="@string/todo"
            android:minWidth="48dp"
            card_view:srcCompat="@drawable/ic_baseline_share_24"
            tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck,TouchTargetSizeCheck" />

    </LinearLayout>
</androidx.cardview.widget.CardView>